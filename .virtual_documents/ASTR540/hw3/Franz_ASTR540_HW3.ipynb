def gaussian_model(x, mean, std):
    return 1/np.sqrt(2*np.pi*std**2) * np.exp(-(x-mean)**2 / (2*std**2))

def loglike(theta, x, y, yerr):
    """
    Let's just use chi2
    """
    model = gaussian_model(x, *theta)
    sigma2 = yerr**2
    
    chi2 = np.sum((y - model)**2/sigma2)
    logl = -0.5*chi2
    return logl

def prior_transform(theta):
    mean = theta[0]*40 - 20
    std = theta[1]*20
    return [mean, std]


